                    "description": "Pass transaction information",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "item_id",
                                    "is_purchase",
                                    "item_count",
                                    "total_item_price",
                                    "transaction_at"
                                ],
                                "properties": {
                                    "item_id": {
                                        "type": "integer",
                                        "example": "1"
                                    },
                                    "is_purchase": {
                                        "type": "boolean",
                                        "example": "true"
                                    },
                                    "item_count": {
                                        "type": "integer",
                                        "example": "20"
                                    },
                                    "total_item_price": {
                                        "type": "number",
                                        "example": "800"
                                    },
                                    "transaction_at": {
                                        "type": "string",
                                        "example": "2020-04-01 12:00:00"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
