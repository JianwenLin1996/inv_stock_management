    "paths": {
        "/api/transactions": {
            "get": {
                "tags": [
                    "transaction"
                ],
                "summary": "Get transaction list for specific id",
                "description": "Get transaction by providing page, is_purchase, item_id. Default is_purchase is 0",
                "operationId": "transactionIndex",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page for filter",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "example": "1"
                    },
                    {
                        "name": "is_purchase",
                        "in": "query",
                        "description": "is_purchase = 1 shows only purchase, is_purhase = 0 shows only sales.",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "item",
                        "in": "query",
                        "description": "Item id",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "1,2,3"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Transaction created successfully."
                                        },
                                        "status": {
                                            "type": "boolean",
                                            "example": "true"
                                        },
                                        "data": {
                                            "type": "object",
                                            "example": []
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Invalid transaction value",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Please purchase stock first."
                                        },
                                        "status": {
                                            "type": "boolean",
                                            "example": "false"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
